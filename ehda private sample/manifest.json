{
  "manifest_version": 3,
  "name": "EH Downloader Advanced",
  "description": "Downloader for E-Hentai / ExHentai galleries.",
  "version": "1.0.0",

  "permissions": [
    "downloads",
    "storage"
  ],

  "host_permissions": [
    "https://e-hentai.org/*",
    "https://exhentai.org/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://e-hentai.org/*",
        "https://exhentai.org/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]

}
